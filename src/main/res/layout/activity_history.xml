<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HistoryActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="HISTÓRICO"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/meta_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/txt_title_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título: "
                    android:textAlignment="center"
                    android:textColor="@color/ColorHint"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/txt_title_meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_toEndOf="@+id/txt_title_des"
                    android:layout_toRightOf="@+id/txt_title_des" />

                <TextView
                    android:id="@+id/txt_size_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tamanho: "
                    android:textAlignment="center"
                    android:textColor="@color/ColorHint"
                    android:layout_below="@+id/txt_title_des"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/txt_size_meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_alignBottom="@+id/txt_size_des"
                    android:layout_toEndOf="@+id/txt_size_des"
                    android:layout_toRightOf="@+id/txt_size_des" />

                <TextView
                    android:id="@+id/txt_date_create_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data da Criação: "
                    android:textAlignment="center"
                    android:textColor="@color/ColorHint"
                    android:layout_below="@+id/txt_size_des"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/txt_date_create_meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_toEndOf="@+id/txt_date_create_des"
                    android:layout_alignBottom="@+id/txt_date_create_des"
                    android:layout_toRightOf="@+id/txt_date_create_des" />

                <TextView
                    android:id="@+id/txt_date_edit_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ultima edição: "
                    android:textAlignment="center"
                    android:textColor="@color/ColorHint"
                    android:layout_below="@+id/txt_date_create_des"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/txt_date_edit_meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_toEndOf="@+id/txt_date_edit_des"
                    android:layout_alignBottom="@+id/txt_date_edit_des"
                    android:layout_toRightOf="@+id/txt_date_edit_des" />


                <TextView
                    android:id="@+id/txt_type_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo: "
                    android:textAlignment="center"
                    android:textColor="@color/ColorHint"
                    android:layout_below="@+id/txt_date_edit_des"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/txt_type_meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_toEndOf="@+id/txt_type_des"
                    android:layout_alignBottom="@+id/txt_type_des"
                    android:layout_toRightOf="@+id/txt_type_des" />

            </RelativeLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>



